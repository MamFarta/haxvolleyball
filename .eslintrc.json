{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "airbnb-typescript/base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": [
            "./tsconfig.json"
        ]
    },
    "rules": {
        "@typescript-eslint/keyword-spacing": [
            2,
            {
                "overrides": {
                    "this": {
                        "before": false
                    }
                }
            }
        ],
        "prefer-destructuring": [
            "error",
            {
                "array": false,
                "object": true
            },
            {
                "enforceForRenamedProperties": false
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ]
    }
}