{
  "name": "haxvolleyball",
  "version": "1.0.0",
  "description": "",
  "main": "src/backend/index.ts",
  "scripts": {
    "start": "ts-node src/backend/index.ts",
    "watch": "concurrently \"npm:watch-front\" \"npm:watch-server\" -c \"bgBlue.bold,bgMagenta.bold\"",
    "watch-front": "webpack --watch",
    "watch-server": "NODE_PATH=./src ts-node-dev --respawn --poll src/backend/index.ts ./tsconfig.server.json",
    "build": "npm run build-front && npm run build-server",
    "build-front": "webpack",
    "build-server": "tsc -p ./tsconfig.server.json",
    "clean": "rm -r ./build && rm -r ./public/scripts/*.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MamFarta/haxvolleyball.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MamFarta/haxvolleyball/issues"
  },
  "homepage": "https://github.com/MamFarta/haxvolleyball#readme",
  "dependencies": {
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "socket.io": "^4.1.2",
    "socket.io-client": "^4.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "concurrently": "^6.2.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.23.4",
    "jest": "^27.0.3",
    "ts-jest": "^27.0.2",
    "ts-loader": "^9.2.2",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  }
}
